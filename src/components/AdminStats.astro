<section class="space-y-6">
  <div class="grid gap-4 md:grid-cols-4">
    <div class="card p-4"><p class="text-xs text-slate-400">Total Reservations</p><p id="stat-reservations" class="text-2xl font-bold">0</p></div>
    <div class="card p-4"><p class="text-xs text-slate-400">Active Memberships</p><p id="stat-memberships" class="text-2xl font-bold">0</p></div>
    <div class="card p-4"><p class="text-xs text-slate-400">Upcoming Classes</p><p id="stat-classes" class="text-2xl font-bold">0</p></div>
    <div class="card p-4"><p class="text-xs text-slate-400">Revenue Estimate</p><p id="stat-revenue" class="text-2xl font-bold">$0</p></div>
  </div>

  <div class="card p-4">
    <p class="mb-2 text-sm text-slate-400">Lane Occupancy</p>
    <div class="h-4 rounded-full bg-slate-700"><div id="occupancy-bar" class="h-4 rounded-full bg-red-700" style="width: 0%"></div></div>
    <p id="occupancy-text" class="mt-2 text-sm">0%</p>
  </div>

  <div class="grid gap-4 lg:grid-cols-2">
    <div class="card p-4">
      <div class="mb-3 flex items-center justify-between">
        <h3 class="text-lg font-semibold">Recent Reservations</h3>
        <button id="export-csv" class="btn-secondary text-xs">Export CSV</button>
      </div>
      <div class="overflow-auto">
        <table class="w-full text-left text-sm">
          <thead><tr class="border-b border-slate-700"><th class="pb-2">ID</th><th class="pb-2">Date</th><th class="pb-2">Type</th></tr></thead>
          <tbody id="recent-body"></tbody>
        </table>
      </div>
    </div>
    <div class="card p-4">
      <h3 class="mb-3 text-lg font-semibold">Revenue Trend</h3>
      <canvas id="revenue-chart" height="160"></canvas>
      <button id="reset-demo" class="btn-primary mt-4 w-full">Reset Demo Data</button>
    </div>
  </div>
</section>
